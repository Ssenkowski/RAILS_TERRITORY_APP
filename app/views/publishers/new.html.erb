<h1> Create your Publisher Account </h1>
<h3> Please be sure to use the same email you did logging in or signing up which is the email listed at the top of the page.</h3>
<br>

<%= form_for @publisher do |f| %>
  <% if @publisher.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@publisher.errors.count, "error") %>
      prohibited this post from being saved:
    </h3>
        <ul>
          <% @publisher.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
          <%end%>
        </ul>
      </div>
  <%end%>
  <%=f.label :email %>
  <%=f.email_field :email %>
  <br>
  <%=f.label :username %>
  <%=f.text_field :username %>
  <br>
  <%=f.label :first_name %>
  <%=f.text_field :first_name %>
  <br>
  <%=f.label :last_name %>
  <%=f.text_field :last_name %>
  <br>
  <%=f.label :service_group %>
  <%=f.number_field :service_group %>
  <br>
  <br>
  <%=f.collection_check_boxes(:congregation_id, Congregation.all, :id, :name) %>
  <br>
  <br>
  <%= f.submit "Add Publisher"%>
<%end%>

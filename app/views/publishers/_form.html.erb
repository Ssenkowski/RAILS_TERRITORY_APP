<%= form_for @publisher do |f| %>

  <% if @publisher.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@publisher.errors.count, "error") %>
      prohibited this post from being saved:
    </h3>
        <ul>
          <% @publisher.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
          <%end%>
        </ul>
      </div>
  <%end%>
  <br>
  <b><%=f.label :email %></b>
  <%=f.email_field :email, :class => 'form_field' %>
  <br>
  <b><%=f.label :username %></b>
  <%=f.text_field :username, :class => 'form_field' %>
  <br>
  <b><%=f.label :first_name %></b>
  <%=f.text_field :first_name, :class => 'form_field' %>
  <br>
  <b><%=f.label :last_name %></b>
  <%=f.text_field :last_name, :class => 'form_field' %>
  <br>
  <b><%=f.label :service_group %></b>
  <%=f.number_field :service_group, :class => 'form_field' %>
  <br>
  <br>
  <i>If your congregation is not listed below please talk to your territory servant.</i><br><br>
  <%=f.collection_check_boxes(:congregation_id, Congregation.all, :id, :name) %>
  <%= f.submit "Submit"%>
<%end%>

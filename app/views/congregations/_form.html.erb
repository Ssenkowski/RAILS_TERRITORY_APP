<%= form_for @congregation do |f| %>

  <% if @congregation.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@congregation.errors.count, "error") %>
      prohibited this post from being saved:
    </h3>
        <ul>
          <% @congregation.errors.full_messages.each do |message| %>

<h2> Add a new Congregation </h2>

<%= form_for @congregation do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>

  <%=f.label :number %>
  <%=f.text_field :number %>

  <%=f.label :address %>
  <%=f.text_field :address %>

  <%=f.label :street %>
  <%=f.text_field :street %>

  <%=f.label :meeting_times %>
  <%=f.text_field :meeting_times %>

  <%= f.submit "Add Congregation"%>
<%end%>
